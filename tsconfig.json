{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "target": "ES2017",
    "module": "ESNext",
    "declaration": false,
    "outDir": "dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["jest", "node"]
  },
  "include": ["src/**/*.ts", "src/**/*.js", "tests/**/*.ts"]
}
